<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<section class="product-details spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6">
        <div class="product__details__pic">
          <div class="product__details__pic__item">
            <img class="product__details__pic__item--large" src="{{product.thumbnail}}" alt="{{product.title}}">
          </div>
          <!-- Nếu có nhiều ảnh thumbnail phụ, có thể lặp ở đây -->
          <div class="product__details__pic__slider owl-carousel">
            <img data-imgbigurl="{{product.thumbnail}}" src="{{product.thumbnail}}" alt="{{product.title}}">
          </div>
        </div>
      </div>

      <div class="col-lg-6 col-md-6">
        <div class="product__details__text">
          <h3>{{product.title}}</h3>

          <!-- Nếu bạn có đánh giá: -->
          <div class="product__details__rating">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star-half-o"></i>
            <span>(18 đánh giá)</span>
          </div>

          <div class="product__details__price">{{product.sellPrice}}₫</div>

          <p>{{product.description}}</p>
          <form id="addCartForm" action="/cart/add/{{product._id}}" method="POST">
            <div class="product__details__quantity">
              <div class="quantity">
                <div class="pro-qty">
                  <input type="text" value="1" id="quantity" name="qty" min="1">
                </div>
              </div>
            </div>

            <button type="submit" class="primary-btn">Thêm vào giỏ hàng</button>
            <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
          </form>

          <ul>
            <li><b>Tồn kho</b> <span>{{product.stock}}</span></li>
            <li><b>Trạng thái</b> <span>
                {{#if product.stock}}
                Còn hàng
                {{else}}
                Hết hàng
                {{/if}}
              </span></li>
          </ul>


          {{#if listCat.length}}
          <h5 class="mt-4">Danh mục:</h5>
          <ul>
            {{#each listCat}}
            <li>{{this.categoryName}}</li>
            {{/each}}
          </ul>
          {{/if}}

        </div>
      </div>
      <div class="col-lg-12">
        <div class="product__details__tab">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab" aria-selected="true">Mô tả</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab" aria-selected="false">Thông tin</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab" aria-selected="false">Nhận Xét
                <span>(1)</span></a>
            </li>
          </ul>
          <div class="tab-content">
            <!-- Tab Mô tả -->
            <div class="tab-pane active" id="tabs-1" role="tabpanel">
              <div class="product__details__tab__desc">
                <h6>Mô tả sản phẩm</h6>
                <p>{{product.description}}</p>
              </div>
            </div>

            <!-- Tab Thông tin -->
            <div class="tab-pane" id="tabs-2" role="tabpanel">
              <div class="product__details__tab__desc">
                <h6>Thông tin sản phẩm</h6>
                <p><strong>Ngày sản xuất:</strong> {{product.mfg}}</p>
                <p><strong>Ngày hết hạn:</strong> {{product.exp}}</p>
                <p><strong>Nhà sản xuất:</strong> {{product.producer}}</p>
              </div>
            </div>

            <!-- Tab Nhận Xét -->
            <div class="tab-pane" id="tabs-3" role="tabpanel">
              <div class="product__details__tab__desc">
                <h6>Nhận xét sản phẩm</h6>
                <p>Ngon bổ rẻ</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>


<!-- Add to Cart JavaScript -->
 <script>
  document.addEventListener('DOMContentLoaded', function () {
    const addCartForm = document.getElementById('addCartForm');

    if (addCartForm) {
      addCartForm.addEventListener('submit', function (e) {
        e.preventDefault();

        const formData = new FormData(this);
        const quantity = parseInt(formData.get('qty'), 10);
        const stock = parseInt(document.querySelector('ul li span').textContent, 10); // Lấy tồn kho từ thẻ <li><b>Tồn kho</b> <span>{{product.stock}}</span></li>

        if (quantity > stock) {
          Swal.fire({
            title: 'Không đủ hàng!',
            text: `Chỉ còn ${stock} sản phẩm trong kho.`,
            icon: 'warning',
            confirmButtonText: 'OK'
          });
          return;
        }

        fetch(this.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: `qty=${quantity}`
        })
          .then(response => {
            if (response.ok) {
              Swal.fire({
                title: 'Thành công!',
                text: 'Sản phẩm đã được thêm vào giỏ hàng',
                icon: 'success',
                confirmButtonText: 'Xem giỏ hàng',
                showCancelButton: true,
                cancelButtonText: 'Tiếp tục mua sắm'
              }).then((result) => {
                if (result.isConfirmed) {
                  window.location.href = '/cart';
                }
              });

              updateCartCount();
            } else {
              Swal.fire({
                title: 'Lỗi!',
                text: 'Không thể thêm sản phẩm vào giỏ hàng',
                icon: 'error',
                confirmButtonText: 'Đóng'
              });
            }
          })
          .catch(error => {
            console.error('Error:', error);
            Swal.fire({
              title: 'Lỗi!',
              text: 'Đã xảy ra lỗi khi thêm sản phẩm vào giỏ hàng',
              icon: 'error',
              confirmButtonText: 'Đóng'
            });
          });
      });
    }

    function updateCartCount() {
      fetch('/cart/count')
        .then(response => response.json())
        .then(data => {
          const cartCountElement = document.querySelector('.header__cart__price span');
          if (cartCountElement) {
            cartCountElement.textContent = data.count;
          }
        })
        .catch(error => console.error('Error updating cart count:', error));
    }
  });
</script>


